<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Blog</title>
</head>
<body>
    <div class="posts-container"></div>
    <!-- post add buton -->
    <div class="post-add-btn"><h1>+</h1></div>

    <div class="posts">
        <% posts.forEach((post) => { %>
            <div class="post">
                <h2><%= post.title %></h2>
                <img src="/post.jpg">
                <p>
                    <%= post.content.substring(0, 300) + "..." %>
                    <a href="/posts/<%= post.title %>">Read more</a>
                </p>                
            </div>
        <% }) %>
    </div>

    <div class="post-add-form">
        <form action="/submit" method="post" id="post-form">
            <h3>Create new Post</h3>
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" name="image" id="image" class="form-control">
            </div>
            <div class="form-group">
                <lable for="content">Content</lable>
                <textarea name="content" class="form-control"></textarea>
            </div>
            <div class="form-group-btn">
                <input type="submit" value="submit" id="submit" class="form-control">
                <input type="button" value="Cancel" id="cancel" class="form-control">
            </div>           
        </form>
    </div>

    <script src="/script.js" charset="utf-8"></script>
</body>
</html>